<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- The HelloWorld class is intantiated using the below config -->
   <bean id = "helloWorld" class = "com.insync.spring.beans.HelloWorld">
      <property name = "message" value = "Hello World!"/>
   </bean>
   <!-- Same HelloWorld Object can be created using the below config. The difference is we are not 
        initializing the property message -->
	<bean id="helloWorldObj" class="com.insync.spring.beans.HelloWorld"></bean>
</beans>